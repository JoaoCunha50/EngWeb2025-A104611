extends layout

block content
    .w3-card-4
      header.w3-container.w3-teal
        h1
          span Books List

      .w3-container
        table.w3-table-all
          tr
            th Id
            th Title 
            th Author 
            th PublishDate
            th Pages
            
          each book in slist 
            tr 
              td
                a(href="/" + book.bookId)= book.bookId 
              td= book.title
              td= book.author
              td= book.publishDate
              td= book.pages
